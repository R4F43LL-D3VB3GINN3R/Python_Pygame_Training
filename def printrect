# [METHOD: 001] #

    def printrect(self):

        for row_index, row in enumerate(self.map):
            for col_index, cell in enumerate(row):
                x = col_index * self.rect_size
                y = row_index * self.rect_size

                if cell == 'X':
                    pygame.draw.rect(self.surface, (0, 0, 255), pygame.Rect(x, y, 50, 50))

#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
