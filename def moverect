#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
# [METHOD: 002] #

    def moverect(self, surface):

        pygame.draw.rect(surface, (0, 0, 0), self.rect2)
        pygame.draw.rect(surface, (0, 0, 0), self.rect3)

        key = pygame.key.get_pressed()

        if key[pygame.K_d]:
            self.direction = 'right'
            self.rect2.x += 1
        elif key[pygame.K_a]:
            self.direction = 'left'
            self.rect2.x -= 1
        elif key[pygame.K_s]:
            self.direction = 'down'
            self.rect2.y += 1
        elif key[pygame.K_w]:
            self.direction = 'up'
            self.rect2.y -= 1
        else:
            self.direction = 'stop'

        pygame.draw.rect(surface, self.color, self.rect2)

#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
